@using AvMonitor.Classes
@using AvMonitor.Data
@using Microsoft.EntityFrameworkCore
@{

    var db = new DataBase(ViewData["dbContext"] as TaskDataContext);

}

@model TaskModel
@{
    ViewData["Title"] = "Tasks";
}


<div>
    <div class="row">
        <div class="col">
            <h2 class="text-lg-center">Добавить задачу</h2>
            <form method="post" asp-controller="Task" asp-action="Add" class="align-self-end">

                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="align-self-end" />
                    <span asp-validation-for="Name"></span>

                     <br>

                     <label asp-for="Path"></label>
                     <input asp-for="Path" />
                     <span asp-validation-for="Path"></span>

                     <br>

                    <label asp-for="CronExp"></label>
                    <input asp-for="CronExp" />
                    <span asp-validation-for="CronExp"></span>

                    <br>

                    <label asp-for="Description"></label>
                    <input asp-for="Description" />
                    <span asp-validation-for="Description"></span>

                    <br>

                    <input type="submit" value="Добавить" />
    </form>
    </div>
    <div class="col">
    <h2 class="container">Удалить задачу</h2>
    <form method="post" asp-controller="Task" asp-action="Delete">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>

        <input type="submit" value="Удалить" />
    </form>
        </div>
    </div>
</div>

<!DOCTYPE html>
<html>
 <head>
   <title>Все задачи пользователя @User.Identity?.Name</title>
   <style>
       table, th, td {
         border: solid 1px #bbbbbb;
         border-collapse: collapse;
         padding: 2px;
       }
    </style>
 </head>
 <body>
   <h1>Все задачи пользователя @User.Identity?.Name</h1>
   <table>
       <thead>
           <tr>
               <th>Id</th>
               <th>Name</th>
               <th>Description</th>
                <th>CronExp</th>
           </tr>
       </thead>
       <tbody>
            @foreach(var task in db.GetAllTasksFromUser(new UserModel(@User.Identity?.Name))){
                <tr>
               <td>@task.Id</td>
                   <td>@task.Name</td>
                   <td>@task.Description</td>
                   <td>@task.CronExp</td>
            </tr>
           }
       </tbody>
   </table>
 </body>
</html>